{
  "$schema": "https://json.schemastore.org/tsconfig",
  // Force reload
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@type"
    ],
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
      "@/shared/*": [
        "src/contexts/shared/*"
      ],
      "@/tests/*": [
        "tests/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
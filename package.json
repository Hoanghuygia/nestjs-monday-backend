{
  "name": "nestjs-monday-backend",
  "version": "1.0.0",
  "description": "Integration services for Monday.com",
  "author": "hoanghuy051230@gmail.com",
  "license": "MIT",
  "templateResource": "git+https://github.com/AlbertHernandez/nestjs-service-template.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hoanghuygia/nestjs-monday-backend.git"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "template",
    "monday.com",
    "integration"
  ],
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.x"
  },
  "packageManager": "npm@10.9.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:clean && nest build --path tsconfig.prod.json",
    "build:clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts",
    "lint:fix": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts --fix",
    "lint:file": "eslint --ignore-path .gitignore",
    "lint:yaml": "chmod +x scripts/lint_yaml.sh && ./scripts/lint_yaml.sh",
    "lint-staged": "lint-staged",
    "test": "rimraf coverage .nyc_output && concurrently \"npm run test:unit\" \"npm run test:e2e\" && npm run calculate-global-test-coverage",
    "test:unit": "vitest run --coverage --config vitest.config.unit.ts",
    "test:e2e": "vitest run --coverage --config ./vitest.config.e2e.ts",
    "test:performance": "k6 run tests/performance/contexts/users/get-users.mjs",
    "calculate-global-test-coverage": "tsx scripts/calculate-global-test-coverage.ts",
    "prepare": "husky",
    "typos": "chmod +x scripts/check_typos.sh && ./scripts/check_typos.sh",
    "dev": "npm run dev:stop && concurrently \"npm run dev:server\" \"npm run dev:expose\"",
    "dev:server": "ts-node-dev --respawn --transpile-only --poll -r tsconfig-paths/register src/main.ts",
    "dev:expose": "node -r dotenv/config -e \"require('child_process').spawn('mapps', ['tunnel:create', '-p', '8080', '-a', process.env.APP_ID, '--verbose'], {stdio: 'inherit', shell: true}).on('close', (code) => process.exit(code))\"",
    "dev:stop": "kill-port 8080",
    "dev:debug": "nest start --watch --debug=0.0.0.0:9229 --transpile-only",
    "deploy:build": "npm run build && cp package.json dist/package.json && jq '.scripts = {start: \"NODE_ENV=production node main\"}' package.json > dist/package.json",
    "deploy:push": "mapps code:push -d \"dist\"",
    "deploy": "npm run deploy:build && npm run deploy:push",
    "fetch:schema": "bash fetch-schema.sh",
    "codegen": "graphql-codegen",
    "fetch:generate": "npm run fetch:schema && npm run codegen"
  },
  "dependencies": {
    "@mondaycom/apps-sdk": "^3.2.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "graphql": "^16.8.2",
    "graphql-request": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "monday-sdk-js": "^0.5.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@mondaycom/apps-cli": "^4.8.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.14",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "prettier": "^3.4.2",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
